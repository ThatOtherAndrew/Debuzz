{
  "manifest_version": 3,
  "name": "Debuzz",
  "version": "1.0.0",
  "description": "the ultimate tool to debuzz any web page !",
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/buzz_sound.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}